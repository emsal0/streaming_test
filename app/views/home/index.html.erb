<% if session[:user] %>
	<p> Welcome, <%=session[:user].email %>!</p>
	<%= form_tag logout_path do %>
		<%= submit_tag("Log Out") %>
	<% end %>
<% end %>
<p><%= flash[:notice] %></p>
<% if session[:user] %>
	<%= form_tag set_video_source_path do %>
		<%= text_field_tag(:src, @video.source) %>
		<%= submit_tag("Submit") %>
	<% end %>
<% end %>
<button type="button" id="logintoggle">Open Admin Login Form</button>
<video controls>
	<source src="<%=@video.source%>" type="video/webm">
</video>
<%= form_tag login_path, id: "loginform" do %>
	<p><%= label_tag :email %> <%= text_field_tag(:email) %></p>
	<p><%= label_tag :password %> <%= password_field_tag(:password) %></p>
	<%= submit_tag("Log In") %>
<% end %>

<script type="text/javascript">
	$('#loginform').hide();
	$('#logintoggle').click(function() {
		$('#loginform').toggle();
	});



	<% if session[:user] %>
	$('#logintoggle').hide()
	$('#loginform').hide()
	<% end %>

</script>

